<h1>Register</h1>

<% if (locals.message) { %>
  <p><%= message %></p>
  <% } %>
  <div class="animate fadeInUp loginForm column is-offset-one-quarter is-half">
    <form method="POST" action="/register" enctype="multipart/form-data">
      <div class="">
        <label class="label" for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control input">
      </div>
      <div class="form-group">
        <label class="label" for="email">Email</label>
        <input type="text" name="email" id="email" class="form-control input">
      </div>
      <div class="form-group">
        <label class="label" for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control input">
      </div>
      <div class="form-group">
        <label class="label" for="passwordConfirmation">Password Confirmation</label>
        <input type="password" name="passwordConfirmation" id="passwordConfirmation" class="form-control input">
      </div>
      <div>
        <label class="label" for="image">Image</label>
        <input type="file" name="image" id="image" class="input">
      </div>

      <div class="buttons">
        <button class="register-button button buttons is-primary">Register</button>
      </div>
    </form>
  </div>
